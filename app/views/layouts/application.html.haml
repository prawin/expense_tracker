!!!
%html
  %head
    %title SalCal
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'ui/jquery.ui.all'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery','ui/jquery.ui.core.min.js', 'ui/jquery.ui.datepicker.min', 'jquery.validate', 'jQuery.effects.highlight.min'
    = csrf_meta_tag
  %body
    #main_container
      #header_bar
        = render :partial => "layouts/application/header_bar"


      #container
        .nav_bar
          = link_to "Expenses", expenses_url
          = link_to "Calender", expense_calender_url
          = link_to "Analysis", "#"
          = link_to "Categories", "#"

        #content
          #left
            = yield :left

          #right
            = yield :right
          .clear

